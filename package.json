{
	"name": "learn-with-machines",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . --ext .svelte,.ts,.js",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"svelte-check": "svelte-check --fail-on-warnings",
		"validate:html": "html-validate \"build/**/*.html\"",
		"validate:w3c": "vnu --errors-only --skip-non-html ./build",
		"a11y": "axe ./build --recursive",
		"links": "linkinator ./build --recurse --silent",
		"mdlint": "remark \"src/**/*.md\" -qf",
		"spell": "cspell \"src/**/*.{svelte,ts,md}\"",
		"seo:collect": "node scripts/gen-lh-urls.mjs && npx -y @lhci/cli collect $(awk '{print \"--url=\" $0 }' .lighthouseci/urls.txt)",
		"seo:assert": "npx -y @lhci/cli assert --output=json --output-path=.lighthouseci/assertion-results.json",
		"seo:upload": "npx -y @lhci/cli upload --target=filesystem --outputDir=.lighthouseci",
		"seo": "npm run seo:collect && npm run seo:assert && npm run seo:upload",
		"qa": "npm run svelte-check && npm run lint && npm run build && npm run validate:html && npm run validate:w3c && npm run a11y && npm run links && npm run mdlint && npm run spell && npm run seo",
		"clean": "node scripts/clean.mjs",
		"clean:build": "node scripts/clean.mjs --build-only",
		"clean:reports": "node scripts/clean.mjs --reports-only",
		"clean:cache": "node scripts/clean.mjs --cache",
		"clobber": "node scripts/clean.mjs --all"
	},
	"devDependencies": {
		"@axe-core/cli": "^4.10.2",
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.36.0",
		"@skeletonlabs/skeleton": "^3.2.0",
		"@skeletonlabs/skeleton-svelte": "^1.5.1",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.42.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.18",
		"@tailwindcss/vite": "^4.1.13",
		"@types/node": "^24.5.2",
		"cspell": "^9.2.1",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"html-validate": "^10.0.0",
		"linkinator": "^6.1.4",
		"mdsvex": "^0.12.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"remark-cli": "^12.0.1",
		"remark-lint-no-dead-urls": "^2.0.1",
		"remark-preset-lint-recommended": "^7.0.1",
		"svelte": "^5.39.3",
		"svelte-check": "^4.3.1",
		"svelte-eslint-parser": "^1.3.3",
		"tailwindcss": "^4.1.13",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.0",
		"vite": "^7.1.6",
		"vnu-jar": "^24.10.17"
	},
	"dependencies": {
		"svelte-meta-tags": "^4.4.1",
		"tailwindcss-palette-generator": "^1.6.1"
	}
}
